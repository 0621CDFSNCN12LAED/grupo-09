<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('./partials/head') %>

		<title>Registro</title>
	</head>
	<header><%- include('partials/header') %></header>
	<body>
		<main>
			<div
				class="container product-wrapper box-shadow background_amarillo"
			>
				<h1 class="main-title w-100">Registro</h1>
				<% if (locals.errors){ errors.forEach(errors=>{ %>
				<p class="gp"><%= errors.msg %></p>
				<% }) } %>
				<form action="/users/registro" method="POST">
					<div class="form-input">
						<label class="main-label" for="name">Nombre </label>
						<input id="name" type="text" name="first_name" />
					</div>

					<div class="form-input">
						<label class="main-label" for="name">Apellido </label>
						<input id="name" type="text" name="last_name" />
					</div>

					<div class="form-input">
						<label class="main-label" for="username"
							>Nombre de usuario:
						</label>
						<input id="username" type="text" name="username" />
					</div>
					<div class="form-input">
						<label class="main-label" for="Email">Email </label>
						<input id="email" type="text" name="email" />
					</div>

					<div class="form-input">
						<label class="main-label">Perfil de usuario:</label>
						<select name="userProfile">
							<option
								type="radio"
								id="user-profile-seller"
								value="3"
							>
								Mecanico
							</option>
							<option
								type="radio"
								id="user-profile-buyer"
								value="2"
							>
								Comprador
							</option>
							<option
								type="radio"
								id="user-profile-seller"
								value="1"
							>
								Vendedor
							</option>
						</select>
					</div>

					<div class="form-inputFoto">
						<label class="main-label" for="profile-pic"
							>Foto de perfil:
						</label>
						<input
							id="profile-pic"
							type="file"
							name="profile-pic"
							accept="image/png,image/jpeg"
						/>
					</div>

					<div class="form-input">
						<label class="main-label" for="password"
							>Contraseña:
						</label>
						<input id="password" type="password" name="password" />
					</div>

					<div class="form-input">
						<label class="main-label" for="rePassword"
							>Repetir Contraseña:
						</label>
						<input
							id="rePassword"
							type="password"
							name="rePassword"
						/>
					</div>
					<div class="text-center">
						<button class="button_3 margin-5" type="reset">
							Resetear
						</button>
						<button class="button_1 margin-5" type="submit">
							Enviar
						</button>
					</div>
				</form>
			</div>
		</main>
		<%- include('./partials/footer') %>
	</body>
</html>
