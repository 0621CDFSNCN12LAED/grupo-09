<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
     <title>Creación de Productos</title>
  </head>
  <header class="background_amarillo">
    <%- include('./partials/header') %>
  </header>
  <body>
    <main class="background_amarillo">
      <div class="product-wrapper w-65 margin-auto ">
      <h1 class="main-title w-100">Crear Nuevo Producto</h1>
      <article class="product flex box-shadow bg-white">
        <% if (locals.errors){ errors.forEach(errors=>{ %>
        <p class="gp"><%= errors.msg %></p>
        <% }) } %>
         <img
          class="imgs w-35"
          src="/imgProductos/defaultProduct.png"
          alt="Default Product Image"
          width="200px"
          />
         <form
          class="w-65"
          method="POST"
          action="/product"
          enctype="multipart/form-data"
        >
          <div class="form-input">
            <label class="main-label" for="producto">Nombre de Producto</label>
            <input id="producto" type="text" name="producto" value=''/>
          </div>
          
          <div class="form-input">
            <label class="main-label" for="proveedor"
              >Nombre de Proveedor</label
            >
            <input id="proveedor" type="text" name="proveedor" value=''/>
          </div>
          <div class="form-input">
            <label class="main-label" for="categoria"
              >Categoria del Producto: </label>
              <select name='categoria' id="categoria">
              <% for (cateP of categorias) { %>
                <option  value=<%= cateP.id%>><%=cateP.categoria%>
                </option>
              <%} %>
              </select>             
          </div> 
      
          <div class="form-input">
            <label class="main-label" for="precio">Precio</label>
            <input id="precio" type="number" name="precio" value="" />
          </div>
           <div class="form-input ">
            <label class="main-label" for="descripcion"
              >Descripción del Producto: </label>
           <textarea
              id="descripcion"
              rows='2'
              cols='25'
              name="descripcion">
              </textarea>
             </div>
          <div class="form-inputFoto">
            <label class="main-label" for="imagen">Foto de producto</label>
            <input
              id="imagen"
              type="file"
              name="imagen"
              accept="image/png,image/jpeg"
            />
          </div>
          <div class="text-center">
            <button class="button_2 margin-5" type="reset">Resetear</button>
            <button class="button_1 margin-5" type="submit">Enviar</button>
          </div>
        </form>
      </div>
</article> 
            </div>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
