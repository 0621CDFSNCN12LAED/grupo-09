<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>

    <title>Creaci√≥n de Productos</title>
  </head>
  <header class="background_amarillo">
    <%- include('./partials/header') %>
  </header>
  <body>
    <main class="flex">
      <div
        class="
          flex
          new-margin
          container
          product-wrapper
          w-35
          box-shadow
          background_amarillo
        "
      >
        <h1 class="main-title w-100">Create</h1>
        <form method="post" action="/product" enctype="multipart/form-data">
          <div class="form-input">
            <label class="main-label" for="producto">Nombre de Producto</label>
            <input id="producto" type="text" name="producto" />
            <p class="error">Este campo es requerido</p>
          </div>
          <br />
          <div class="form-input">
            <label class="main-label" for="proveedor"
              >Nombre de Proveedor</label
            >
            <input id="proveedor" type="text" name="proveedor" />
          </div>
          <br />
          <div class="form-input">
            <label class="main-label" for="precio">Precio</label>
            <input id="precio" type="number" name="precio" />
          </div>

          <br />
          <div class="form-inputFoto">
            <label class="main-label" for="imagen">Foto de producto</label>
            <input
              id="imagen"
              type="file"
              name="imagen"
              accept="image/png,image/jpeg"
            />
          </div>
          <div class="text-center">
            <button class="button_1 margin-5" type="submit">Enviar</button>
            <button class="button_2 margin-5" type="reset">Resetear</button>
          </div>
        </form>
      </div>

      <div class="w-65">
        <!--%-include('./partials/prodUnicoDetail.ejs') %> -->
      </div>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
