<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>

    <title>Editar Producto</title>
  </head>
  <header class="background_amarillo">
    <%- include('./partials/header') %>
  </header>
  <body>
    <main class="flex background_amarillo">
      <div class="flex new-margin container product-wrapper w-35 box-shadow">
        <h1 class="main-title w-100">Editar <%= productoUnico.producto %></h1>
        <form
          class="bg-white"
          action="/product/<%= productoUnico.id %>?_method=PUT"
          method="POST"
        >
          <div class="form-input">
            <label class="main-label" for="producto">Nombre del Producto</label>
            <input
              id="producto"
              type="text"
              name="producto"
              value="<%= productoUnico.producto %>"
            />
          </div>
          <br />
          <div class="form-input">
            <label class="main-label" for="proveedor"
              >Nombre del Proveedor</label
            >
            <input
              id="proveedor"
              type="text"
              name="proveedor"
              value="<%= productoUnico.proveedor %>"
            />
          </div>
          <br />
          <div class="form-input">
            <label class="main-label" for="precio">Precio: $</label>
            <input
              id="precio"
              type="number"
              name="precio"
              value="<%= productoUnico.precio %>"
            />
          </div>

          <br />
          <img
            class="imgs flex margin-auto"
            src="/imgProductos/<%=productoUnico.imagen%>"
            alt="<%= productoUnico.producto%>"
            max-width="100px"
          />
          <div class="form-inputFoto">
            <label class="main-label" for="imagen">Foto de producto</label>
            <input
              id="imagen"
              type="file"
              name="product-image"
              accept="image/png,image/jpeg"
            />
          </div>

          <div class="text-center">
            <button class="button_3 margin-5" type="reset">Resetear</button>
            <button class="button_1 margin-5" type="submit" action="/:id ">
              Enviar
            </button>
          </div>
        </form>
      </div>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
